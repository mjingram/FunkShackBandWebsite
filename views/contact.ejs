  <!-- Contact Me -->

  <section class="Contact">



    <div class="jumbotron jumbotron-fluid about-jumbo">

      <h3>Contact Us for Booking</h3>
      <form class="contact-form" id="contactform"  method="POST">

        <div class="form-group text-center">
          <label class="contactLabel" id="nameLabel" for="name">Name: </label>
          <input id="name" class='form-control' type="text" name="name" placeholder="Your name" required>
        </div>

        <div class="form-group text-center">
          <label class="contactLabel" id="emailLabel" for="email">Email address: </label>
          <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="_replyto" placeholder="Your email" required>
        </div>

        <div class="form-group text-center">
          <label class="contactLabel" id="subjectLabel" for="subject">Subject: </label>
          <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
        </div>

        <div class="form-group text-center">
          <label class="contactLabel" id="messageLabel" for="message">Message: </label>
          <textarea id="message" name="message" class="form-control" placeholder="Your message" rows="8" required></textarea>
        </div>

        <div class="row">
          <div class="col text-center">
            <input type="submit" class="btn btn-dark btn-lg text-center sendButt" style="background-color: #00C800;" value="Send">
            <input type="hidden" name="_subject" value="Website contact" />
            <input type="text" name="_gotcha" style="display:none" />
          </div>

        </div>

      </form>
    </div>

  </section>

